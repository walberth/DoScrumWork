@using System.Web.Optimization
@using AgileWork.ModelView
@model UserFirebaseViewModel

@{
    ViewBag.Title = "Index"; ;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AWM - Inicio de Sesi&oacute;n</title>
    <link rel="icon" type="image/png" href="~/Content/dist/img/agile_work_icon.png" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic" />
    @Styles.Render("~/Css")
    @Scripts.Render("~/Js")
</head>
<body class="hold-transition login-page body-login bg">
    <div class="login-box">
        <div class="login-logo">
            <!--En la etiqueta a href poner la url del proyecto-->
            <a href="#"><b>Agile Work</b><span class="space-header-login">Management</span></a>
        </div>
        @using (Html.BeginForm("Login","Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
            <div class="login-box-body box-body-login">
                <p class="login-box-msg title-login">Inicio de sesi&oacute;n</p>
                <!--<form action="../../index2.html" method="post">-->
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @*<input type="email" class="form-control" placeholder="Email">*@
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @*<input type="password" class="form-control" placeholder="Password">*@
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-offset-8 col-xs-4">
                        <button type="submit" class="btn btn-success btn-flat btn-position-login">Iniciar</button>
                    </div>
                </div>
                <!--</form>-->
            </div>
        }
        
    </div>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>


